<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#eeeeee"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:textColor="@color/events"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:paddingBottom="4dp"
        android:fontFamily="casual"
        android:text="SPOT EVENTS"/>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="50dp"
        android:paddingBottom="16dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="240dp"
                android:id="@+id/mini"
                android:layout_height="180dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:paddingLeft="4dp"
                        android:paddingTop="50dp"
                        android:textSize="30sp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#fff"
                        android:background="@drawable/minimilitia"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/title"
                        android:paddingLeft="4dp"
                        android:text="MINI MILITIA"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/halloween"
                android:layout_height="180dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:paddingLeft="4dp"
                        android:paddingTop="50dp"
                        android:textSize="30sp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#fff"
                        android:background="@drawable/halloween"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/title"
                        android:paddingLeft="4dp"
                        android:text="HALLOWEEN"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="240dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/dubsmash"
                android:layout_height="180dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:paddingLeft="4dp"
                        android:paddingTop="50dp"
                        android:textSize="30sp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#fff"
                        android:background="@drawable/dubsmash"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/title"
                        android:paddingLeft="4dp"
                        android:text="DUBSMASH"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:id="@+id/spotevents"
                android:layout_marginLeft="10dp"
                android:layout_height="180dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_navigate_next_black_24dp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    </android.support.v7.widget.CardView>

</LinearLayout>