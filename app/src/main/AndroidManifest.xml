<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sarath.cursors2k17">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cursor"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WebViewActivity"
            android:label="Site"
            android:parentActivityName=".ScrollingActivity" />
        <activity android:name=".Competition" android:label="Competition"
            android:parentActivityName=".ScrollingActivity"  />
        <activity android:name=".MainEvents" android:label="Main Events"
            android:parentActivityName=".ScrollingActivity" />
        <activity android:name=".SpotEvents" android:label="Spot Events"
            android:parentActivityName=".ScrollingActivity" ></activity>
    </application>

</manifest>